<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/kcleanArchitecture_blue</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="BaseToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/BaseToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>

    <style name="BaseToolbarTheme">
        <item name="android:background">@color/kcleanArchitecture_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="KCleanArchitecture.Input.EditText" parent="@android:style/TextAppearance">
        <item name="android:drawablePadding">15dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Use material button with this style>  -->
    <style name="KCleanArchitecture.Input.EventInput" parent="@android:style/TextAppearance">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/kcleanArchitecture_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/grey_input</item>
        <item name="strokeColor">@color/kcleanArchitecture_blue</item>
        <item name="strokeWidth">1dp</item>
    </style>


    <style name="KCleanArchitecture.Buttons.ButtonGeneric" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.09</item>
        <item name="android:lineSpacingExtra">2.3sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="KCleanArchitecture.Buttons.BlueButton" parent="KCleanArchitecture.Buttons.ButtonGeneric">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/kcleanArchitecture_blue</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>





</resources>
